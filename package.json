{
    "name": "parallax-theme",
    "description": "A custom theme for ghost",
    "version": "v1.0.0",
    "engines": {
        "ghost": ">=4.0.0"
    },
    "scripts": {
        "dev": "gulp",
        "zip": "gulp zip",
        "test": "gscan .",
        "test:ci": "gscan --fatal --verbose .",
        "pretest": "gulp build",
        "preship": "yarn test",
        "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi"
    },
    "author": {
        "name": "Medvediev Vlad",
        "email": "medvedev3678@gmail.com",
        "url": "https://github.com/misshgan"
    },
    "gpm": {
        "type": "theme",
        "categories": [
            "Minimal",
            "Blog"
        ]
    },
    "keywords": [
        "ghost",
        "theme",
        "ghost-theme",
		"blog"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/misshgan/ghost-theme-2.git"
    },
    "devDependencies": {
        "autoprefixer": "10.4.12",
        "beeper": "2.1.0",
        "cssnano": "5.1.13",
        "gscan": "4.34.0",
        "gulp": "4.0.2",
        "gulp-livereload": "4.0.2",
        "gulp-postcss": "9.0.1",
        "gulp-sourcemaps": "3.0.0",
        "gulp-uglify": "3.0.2",
        "gulp-util": "3.0.8",
        "gulp-watch": "5.0.1",
        "gulp-zip": "5.1.0",
        "postcss": "8.4.17",
        "postcss-color-mod-function": "3.0.3",
        "postcss-easy-import": "4.0.0"
    },
    "browserslist": [
        "defaults"
    ],
    "config": {
        "card_assets": true,
        "posts_per_page": 40,
        "image_sizes": {
            "xxs": {
                "width": 30
            },
            "xs": {
                "width": 100
            },
            "s": {
                "width": 300
            },
            "m": {
                "width": 600
            },
            "l": {
                "width": 1200
            },
            "xl": {
                "width": 2000
            }
        },
		"custom": {
			"email_signup_text": {
                "type": "text",
                "group": "homepage"
            },
			"header_background_image": {
				"type": "image"
			},
			"show_latest_post_with_selected_tag": {
				"type": "boolean",
				"default": "false"
			},
			"enter_tag_slug_for_post_to_be_displayed": {
				"type": "text",
				"default": "tutorials"
			},
			"most_recent_posts_with_given_tag_image": {
				"type": "image"
			},
			"show_latest_posts_with_selected_tag_section": {
				"type": "boolean",
				"default": "false"
			},
			"enter_tag_slug_tag_for_section_above": {
				"type": "text",
				"default": "tutorials"
			},
			"show_featured_posts_section": {
				"type": "boolean",
				"default": "true"
			},
			"show_other_posts_section": {
				"type": "boolean",
				"default": "true"
			},
			"selected_post_section_position": {
				"type": "select",
				"options": ["1", "2", "3", "4"],
				"default": "1"
			},
			"featured_posts_section_position": {
				"type": "select",
				"options": ["1", "2", "3", "4"],
				"default": "2"
			},
			"selected_posts_section_position": {
				"type": "select",
				"options": ["1", "2", "3", "4"],
				"default": "3"
			},
			"other_posts_section_position": {
				"type": "select",
				"options": ["1", "2", "3", "4"],
				"default": "4"
			}

		} 
    }
}
