<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />
	<link rel="stylesheet" type="text/css" href="{{asset "built/main.css"}}" />

	<link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

	<script src="{{asset "built/m-script.js"}}"></script>

    <title>{{meta_title}}</title>

    {{ghost_head}}
    {{!-- Outputs important meta data and settings, should always be in <head> --}}

</head>
<body>

	<header class="header" >
		<div class="header-background" style="background-image: url({{@site.cover_image}}); background-size: cover; background-position: center;"></div>
		<div class="upper-header">
			<div class="upper-header__logo-title">
				{{#if @site.logo}}
					<img class="upper-header__logo" src="{{@site.logo}}" alt="logo-img">
				{{/if}}
				<h1 class="upper-header__title">{{@site.title}}</h1>
			</div>

			<div class="upper-header__nav">
				{{navigation}}
			</div>
			
			<div class="upper-header__signup">
				<span class="search-icon">{{search}}</span>
				{{#if @site.members_enabled}}
					{{#unless @member}}
						<a class="gh-head-button" href="#/portal/signup" data-portal="signup">Subscribe</a>
					{{else}}
						<a class="gh-head-button" href="#/portal/account" data-portal="account">Account</a>
					{{/unless}}
				{{/if}}
			</div>
		</div>
		<div class="lower-header">
			<div class="lower-header__text">
				{{#if @site.title}}
					<span class="lower-header__hello">üëãüèª hello</span>
					<h1 class="lower-header__title">{{@site.title}}</h1>
					<p class="lower-header__site-description">{{@site.description}}</p>
				{{/if}}
			</div>
		</div>
	</header>


<script src="{{asset "built/jquery-3.4.1.min.js"}}"></script>
<script src="{{asset "built/m-script.js"}}"></script>
<script>
$(document).ready(function () {
    // Mobile Menu Trigger
    $('.gh-burger').click(function () {
        $('body').toggleClass('gh-head-open');
    });
});
</script>

{{#is "post, page"}}
<script src="{{asset "built/jquery.fitvids.js"}}"></script>
<script>
var images = document.querySelectorAll('.kg-gallery-image img');
images.forEach(function (image) {
    var container = image.closest('.kg-gallery-image');
    var width = image.attributes.width.value;
    var height = image.attributes.height.value;
    var ratio = width / height;
    container.style.flex = ratio + ' 1 0%';
});
$(document).ready(function () {
    var $postContent = $(".gh-content");
    $postContent.fitVids();
});
</script>
{{/is}}

{{ghost_foot}}
{{!-- Outputs important scripts - should always be included before closing body tag --}}

</body>
</html>
